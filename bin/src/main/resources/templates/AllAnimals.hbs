{{#partial "content"}}
    <br><br>
<div class="row">
    <div class="col-md-6">
        <div id="card33" class="card">
            <h1 class="text-center text-success">Endangered animals</h1>
            <h4 class="text-success">Animal Name:  <em>Elephant</em></h4>
            <h4 class="text-success">Animal age:  7yrs </h4>
            <h4 class="text-success">Animal Id: <em>21</em></h4>
            <h4 class="text-success">Animal GroupAge: <em>Adult</em></h4>
            <h4 class="text-success">Animal Condition: <em>Healthy</em></h4>
            {{#if endangeredAnimals}}
                {{#each endangeredAnimals}} <!--loop-->

                    <h5><em class="text-primary">Animal Name: </em> <em>{{ animalName }}</em></h5>
                    <h5><em class="text-primary">Animal age: </em> {{ age }} </h5>
                    <h5><em class="text-primary">Animal Id: </em>{{ animalId }}</h5>
                    <h5><em class="text-primary">Animal GroupAge: </em>{{ animalGroupAge }}</h5>
                    <h5><em class="text-primary">Animal Condition: </em>{{ animalCondition }}</h5>
                {{/each}}
            {{else}}
                <p class="text-danger">Click Vulnerable to Add more </p>
            {{/if}}
        </div>
    </div>
    <div class="col-md-6">
        <div id="card33" class="card">
            <h1 class="text-center text-success">Non-Extinct animals</h1>
            <h4><em class="text-success">Animal Name: </em> <em>Plain Zebra</em></h4>
            <h4><em class="text-success">Animal age: </em> 4yrs </h4>
            <h4><em class="text-success">Animal Id: </em>10</h4>
            <h4><em class="text-success">Animal GroupAge: </em>young</h4>
            <h4><em class="text-success">Animal Condition: </em>Healthy</h4>
            {{#if nonendangeredAnimals}}
                {{#each nonEndangeredAnimals}} <!--loop-->

                    <h5 class="text-success">Animal Name: <em>{{ animalName }}</em></h5>
                    <h5 class="text-success>Animal age:  {{ age }} </h5>
                    <h5 class="text-success">Animal Id: {{ animalId }}</h5>
                    <h5 class="text-success">Animal GroupAge: {{ animalGroupAge }}</h5>
                    <h5 class="text-success">Animal Condition: {{ animalCondition }}</h5>
                {{/each}}
            {{else}}
                <p class="text-danger">Click Non-Extinct to add more </p>
            {{/if}}
        </div>
    </div>
</div><br><br>
<div id="card33" class="card">
    <h1 Class="text-center text-success">Sightings</h1>

    <h3 class="text-success">Ranger Name: <em>Innocent George</em></h3>
    <h3 class="text-success">Animal Id: <em> 200</em></h3>
    <h3 class="text-success">Location: <em>Zone D</em></h3>
    {{#if sightings}}
        {{#each sightings}} <!--loop-->

            <h4><em class="text-success">Ranger Name: </em> <em>{{ rangerName }}</em></h4>
            <h4><em class="text-success">Animal Id: </em> {{ animalId }} </h4>
            <h4><em class="text-success">Location: </em>{{ location }}</h4>
        {{/each}}
    {{else}}
        <p class="text-danger">Click Sighting to add </p>
    {{/if}}

</div><br><br>
{{/partial}}

{{> layout.hbs}}